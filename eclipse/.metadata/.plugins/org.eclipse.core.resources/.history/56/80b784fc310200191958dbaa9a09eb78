package br.com.aula27;

public class Aluno {
	String nome;
	String matricula;
	String nomeCurso;
	String[] nomeDisciplina = new String[3];
	double[][] notasDisplicinas = new double[3][4];
	
	void mostrarInfo() {
		System.out.println("Nome: " + nome);
		System.out.println("Matricula " + matricula);
		System.out.println("Nome do curso: " + nomeCurso);
		
		for(int i=0; i<notasDisplicinas.length; i++) {
			System.out.println("Notas da disciplina " + nomeDisciplina[i]);
			for (int j=0; j<notasDisplicinas[i].length; j++) {
				System.out.println(notasDisplicinas[i][j]);
			}
			System.out.println();
		}
		
		
	}

}
