package br.com.br.labs27;

public class Lampada {
	
	String modelo;
	String tensao;
	int potencia;
	String cor;
	String tipLuz;
	int garantiaMeses;
	String[] tipos;
	boolean tipoAbajur;	
	double preco;
	
	boolean ligada;
	boolean desligada;
	
	
	void ligar() {
		ligada = true;
	}
	
	void desligar() {
		ligada = false;
	}
	
	void mostrarEstado() {
		if(ligada) {
			System.out.println("Lampada ligada");
		} else {
			System.out.println("Lamapada desligada");
		}
	}
	
	void mudarEstado() {
		if(ligada) {
			desligar();
		} else {
			ligar();
		}
	}
	
	
	

}
