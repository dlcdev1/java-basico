		boolean opcao = true;
		
		while(!opcao) {
			

			conta.numero = "123456";
			conta.agencia = "1234";
		
			
			
			
			conta.saque = 1000;
			
			
			System.out.println("Numero conta: " + conta.numero);
			System.out.println("Agencia: " + conta.agencia);
			
			conta.sEspecial();
			conta.statusEspecial();
			
			double depositar = conta.depositar(500); 
			
			conta.verificarSaldo();
			
			conta.limiteConta();
			conta.statusLimite();
			
			//conta.saldo();
			
			
			//conta.sacar();
